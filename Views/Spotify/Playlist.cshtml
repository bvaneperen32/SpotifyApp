@model SpotifyApp.Models.PlaylistDetailsViewModel

<div class="playlist-theme">

    <div class="back-to-profile">
        <a href="@Url.Action("Profile", "Spotify")" class="btn btn-light back-button">
            <i class="fas fa-arrow-left"></i> Back to Profile
        </a>
    </div>

    <div class="container mt-4">
        <div class="row playlist-heading-container">
            <!-- Playlist Image -->
            <div class="col-md-4">
                <img src="@Model.ImageUrl" alt="Playlist Cover" class="img-fluid">
            </div>
            <!-- Playlist Name -->
            <div class="col-md-8">
                <h2>@Model.Name</h2>
            </div>
        </div>

        <!-- Songs List -->
        <div class="row mt-4 playlist-table-theme">
            <div class="col-12">
                <h3>Songs</h3>
                <div class="list-group">
                    <div class="list-group-item">
                        <div class="row">
                            <div class="col-md-1">
                                <strong>#</strong>
                            </div>
                            <div class="col-md-1">
                                <!-- Placeholder for the track image column -->
                            </div>
                            <div class="col-md-3">
                                <strong>Title</strong>
                            </div>
                            <div class="col-md-3">
                                <strong>Artist</strong>
                            </div>
                            <div class="col-md-3">
                                <strong>Album</strong>
                            </div>
                        </div>
                    </div>
                    @{
                        int trackNumber = 1; 
                    }
                    @foreach (var track in Model.Tracks)
                    {
                        <a href="@track.SongUrl" class="list-group-item list-group-item-action" target="_blank">
                            <div class="row align-items-center">
                                <div class="col-md-1">
                                    @trackNumber
                                </div>
                                <div class="col-md-1">
                                    <img src="@track.ImageUrl" alt="Track Cover" class="img-fluid">
                                </div>
                                <div class="col-md-3">
                                    @track.Name
                                </div>
                                <div class="col-md-3">
                                    @track.Artist
                                </div>
                                <div class="col-md-3">
                                    @track.Album
                                </div>
                            </div>
                        </a>
                        trackNumber++; 
                    }
                </div>
            </div>
        </div>
    </div>
</div>