
<header>
    <nav class="navbar">
        <div class="navbar-start">
            <a href="https://www.spotify.com" target="_blank">
                <img src="~/SpotifyLogo.png" alt="Spotify Logo" style="height: 40px; max-width: 100px; width: auto;" />
            </a>
            @if (Context.Session.GetString("Token") != null)
            {
                <a class="nav-link" asp-area="" asp-controller="Spotify" asp-action="Profile">Profile</a>
                <a class="nav-link" asp-area="" asp-controller="Spotify" asp-action="TopArtists">Top Artists</a>
                <a class="nav-link" asp-area="" asp-controller="Spotify" asp-action="TopTracks">Top Tracks</a>
            }
        </div>
        <div class="navbar-end">
            @if (Context.Session.GetString("Token") != null)
            {
                <!-- Username displayed to the left of the login button -->
                <p style="color: white; margin-right: 15px;">@Context.Session.GetString("UserName")</p>
            }
            <a class="landing-login-btn" asp-area="" asp-controller="Auth" asp-action="Login" style="font-size: 16px; padding: 10px 15px; margin: 0px;" >Login</a>
        </div>
    </nav>
</header>
